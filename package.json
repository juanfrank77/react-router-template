{
  "name": "remix-template",
  "version": "1.0.0",
  "autor": "Juan Gonzalez",
  "description": "A remix / react-router template for building web applications",
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "react-router build",
    "start": "node ./build/server/index.js",
    "lint": "eslint \"app/**/*.{js,jsx,ts,tsx}\"",
    "test": "playwright test --config=./app/tests/playwright.config.ts",
    "typecheck": "react-router typegen && tsc",
    "check:unused": "knip",
    "check:fix": "knip --fix",
    "format": "prettier --write .",
    "env": "node ./scripts/env.js",
    "postinstall": "pnpm run typecheck"
  },
  "keywords": [],
  "author": "Juan Gonzalez",
  "license": "ISC",
  "dependencies": {
    "@epic-web/client-hints": "^1.3.5",
    "@phosphor-icons/react": "^2.1.7",
    "@react-router/node": "^7.6.0",
    "@react-router/serve": "^7.6.0",
    "hono": "^4.7.9",
    "isbot": "^5.1.27",
    "motion": "^12.10.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.6.0",
    "react-router-hono-server": "^2.13.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.43.0",
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.52.0",
    "@react-router/dev": "^7.6.0",
    "@tailwindcss/vite": "^4.1.6",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "knip": "^5.55.1",
    "prettier": "^3.5.3",
    "react-router-devtools": "^5.0.5",
    "tailwindcss": "^4.1.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
